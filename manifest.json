{
  "name": "ZenStop",
  "description": "Pause before you open distracting sites.",
  "version": "1.0.2",
  "manifest_version": 3,
  "action": {
    "default_title": "ZenStop",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "options_page": "src/options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/shared/utils.js",
        "src/content/content.constants.js",
        "src/content/content.state.js",
        "src/content/content.helpers.js",
        "src/content/content.storage.js",
        "src/content/content.messaging.js",
        "src/content/content.indicator.js",
        "src/content/content.grace.js",
        "src/content/content.overlay.js",
        "src/content/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
